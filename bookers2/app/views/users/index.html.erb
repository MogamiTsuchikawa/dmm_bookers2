<div class='container'>
    <% if @book.errors.any? %>
    <div id="error_explanation">
        <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    <div class='row'>
        <div class='col-xs-3'>
            <%= render 'users/userinfo', book: @book,user: @user %>

        </div>

        <div class='col-xs-9'>
            <h2>Users</h2>

            <table class='table table-hover table-inverse'>
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <% @users.each do |u| %>
                    <tr>
                        <td><a href="/users/<%= u.id %>">
                                <%= attachment_image_tag u, :profile_image ,:fill,40,40 %>
                            </a> </td>
                        <td>

                            <%= u.name%>

                        </td>
                        <td><a href="/users/<%= u.id %>">Show</a></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>

</div>
</div>

<footer>
    <div class='container'>
        <div class='row'>
            <div class='col-xs-3 col-xs-offset-9'>
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>