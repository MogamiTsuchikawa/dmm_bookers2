<div class='container'>
    <div class='row'>
        <div class='col-xs-3'>
            <h2>User info</h2>
            <table class='table'>
                <tr><div class="block-image"><div class="view view-first"><%= attachment_image_tag @user, :profile_image %></div></div></tr>
                <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
            </table>

            <div class='row'>
                <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"
                    href="/users/<%= @user.id %>/edit"></a>
            </div>

            <h2>New book</h2>
            <%= form_for(@book) do |b| %>
            <% if @book.errors.any? %>
            <div id="error_explanation">
                <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
            
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group has-icon">
                        <label class="control-label sr-only"></label>
                        <%= b.text_field :title, class:"form-control", placeholder:"" %>
                        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="col-xs-12">
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <%= b.text_area :body, class:"form-control", rows:"3", placeholder:"" %>
                </div>
            </div>
            <hr>
            <%= b.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
            
        </div>

        <div class='col-xs-9'>
            <h2>Books</h2>

            <table class='table table-hover table-inverse'>
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                <% @books.each do |eb| %>
                    <tr>
                        <td><a href="/users/<%= eb.user_id %>">
                                <img class="attachment user profile_image fallback"
                                    src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg"
                                    alt="No image icon" />
                            </a> </td>
                        <td>
                        <%= link_to book_path(eb.id) do %>
                        <%= eb.title%>
                        <% end %>
                        </td>
                        <td><%= eb.body%></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>

</div>
</div>

<footer>
    <div class='container'>
        <div class='row'>
            <div class='col-xs-3 col-xs-offset-9'>
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>