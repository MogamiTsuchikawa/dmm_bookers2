<div class='container'>
<% if @book.errors.any? %>
<div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
    <div class='row'>
        <div class='col-xs-3'>
            <%= render 'users/userinfo', book: @book,user: @user %>
            
        </div>

        <div class='col-xs-9'>
            

            <%= render 'books/booklist', books: @books %>



        </div>
    </div>

</div>
</div>

<footer>
    <div class='container'>
        <div class='row'>
            <div class='col-xs-3 col-xs-offset-9'>
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>