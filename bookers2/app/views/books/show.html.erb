<div class='container'>
    <% if @book.errors.any? %>
    <div id="error_explanation">
        <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    <div class='row'>
        <div class='col-xs-3'>
            <%= render 'users/userinfo', book: @book,user: @user %>

        </div>

        <div class='col-xs-9'>


            <h2>Book detail</h2>
            <table class='table table-hover table-inverse'>
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td><a href="/users/<%= @target.user_id %>">
                                <%= attachment_image_tag @target.user, :profile_image ,:fill,100,100 %><br>
                                <%= @target.user.name %>
                            </a> </td>
                        <td>
                            <%= link_to book_path(@target.id) do %>
                            <%= @target.title%>
                            <% end %>
                        </td>
                        <td><%= @target.body%></td>
                        <% if @target.user.id == current_user.id %>
                        <td><%= link_to edit_book_path(@target.id) do %>Edit<% end %></td>
                        <td><%= link_to book_path(@target.id),{method: :delete} do %>Delete<% end %></td>
                        <% end %>
                    </tr>

                </tbody>
            </table>



        </div>
    </div>

</div>
</div>

<footer>
    <div class='container'>
        <div class='row'>
            <div class='col-xs-3 col-xs-offset-9'>
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>