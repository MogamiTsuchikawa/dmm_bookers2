<div class='container'>
    <% if @book.errors.any? %>
    <div id="error_explanation">
        <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    <h2>Editing Book</h2>
    <%= form_for(@book) do |b| %>


    <div class="row">
        <div class="col-xs-12">
            <div class="form-group has-icon">
                <label class="control-label sr-only"></label>
                <%= b.text_field :title, class:"form-control", placeholder:"" %>
                <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
            </div>
        </div>
        <div class="col-xs-12">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <%= b.text_area :body, class:"form-control", rows:"3", placeholder:"" %>
        </div>
    </div>
    <hr>
    <%= b.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>

</div>

<footer>
    <div class='container'>
        <div class='row'>
            <div class='col-xs-3 col-xs-offset-9'>
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>